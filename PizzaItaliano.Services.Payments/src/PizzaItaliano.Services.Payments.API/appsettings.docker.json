{
  "app": {
    "name": "Pizza Italiano Payments Service",
    "version": "1"
  },
  "consul": {
    "enabled": true,
    "url": "http://consul:8500",
    "service": "payment-service",
    "address": "payment-service",
    "port": "80",
    "pingEnabled": true,
    "pingEndpoint": "ping",
    "pingInterval": 3,
    "removeAfterInterval": 3
  },
  "fabio": {
    "enabled": true,
    "url": "http://fabio:9999",
    "service": "payment-service"
  },
  "httpClient": {
    "type": "fabio",
    "retries": 3,
    "services": {
      "products": "order-service"
    }
  },
  "mongo": {
    "connectionString": "mongodb://localhost:27017",
    "database": "payment-service",
    "seed": false
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "API",
    "version": "v1",
    "routePrefix": "docs",
    "includeSecurity": true
  },
  "logger": {
    "console": {
      "enabled": true
    },
    "elk": {
      "enabled": false,
      "url": "http://elk:9200"
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://seq:5341",
      "apiKey": "secret"
    }
  },
  "rabbitMq": {
    "hostnames": [
      "rabbitmq"
    ]
  },
  "vault": {
    "enabled": false,
    "url": "http://vault:8200",
    "kv": {
      "enabled": false
    },
    "pki": {
      "enabled": false
    },
    "lease": {
      "mongo": {
        "enabled": false
      }
    }
  },
  "metrics": {
    "enabled": true,
    "influxEnabled": false,
    "prometheusEnabled": true,
    "influxUrl": "http://influx:8086",
    "database": "pizzaitaliano",
    "env": "docker",
    "interval": 5
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "payment",
    "udpHost": "jaeger",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": [ "/", "/ping", "/metrics" ]
  }
}
